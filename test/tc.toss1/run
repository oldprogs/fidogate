#!/bin/sh

../tr.init

echo "tc: copying input packets"
cp ../ti.pkt-z2/*.[pP][kK][tT] toss/in

echo "tc: running"
../../src/toss/ftntoss  -L../cf -S. -bareas.bbs -v
../../src/toss/ftnroute -L../cf -S. -v
../../src/toss/ftnpack  -L../cf -S. -B./bt -v

echo "tc: removing history"
rm -f history*

echo "tc: copying input packets"
cp ../ti.pkt-z2/*.[pP][kK][tT] toss/in

echo "tc: running with EchoMail4D"
../../src/toss/ftntoss  -L../cf -S. -cconfig1 -bareas.bbs -v
../../src/toss/ftnroute -L../cf -S. -cconfig1 -v
../../src/toss/ftnpack  -L../cf -S. -cconfig1 -B./bt -v

echo "tc: copying input packets"
cp ../ti.pkt-z2/*.[pP][kK][tT] toss/in

echo "tc: running with KillOld"
../../src/toss/ftntoss  -L../cf -S. -cconfig2 -bareas.bbs -v
../../src/toss/ftnroute -L../cf -S. -cconfig2 -v
../../src/toss/ftnpack  -L../cf -S. -cconfig2 -B./bt -v
