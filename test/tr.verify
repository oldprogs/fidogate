#!/bin/sh
#
# $Id: tr.verify,v 4.4 1998/02/04 19:17:41 mj Exp $
#
# FIDOGATE test check script, compares run output against run.verify
#

VERIFY=run.verify
OUT=run.out
DIFF=run.diff

if [ -n "$1" ]; then
    DIR=$1
else
    DIR="verify"
fi


if [ -f $VERIFY ]; then

    ./run 2>&1 \
	| grep -v '^ *Date:' \
	| grep -v '^now=' \
	| grep -v '^\^AVia ' \
	> $OUT
    diff -u $VERIFY $OUT >$DIFF 2>&1
    status=$?
    if [ $status -ne 0 ]; then
	echo "$DIR: FAILED, see $DIR/$DIFF"
	exit 1
    else
	echo "$DIR: OK"
	exit 0
    fi

fi

exit 0
