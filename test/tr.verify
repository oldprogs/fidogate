#!/bin/sh
#
# $Id: tr.verify,v 4.2 1998/01/28 22:00:25 mj Exp $
#
# FIDOGATE test check script, compares run output against run.verify
#

VERIFY=run.verify
OUT=run.out
DIFF=run.diff

if [ -n "$1" ]; then
    DIR=$1
else
    DIR="verify"
fi


if [ -f $VERIFY ]; then

    ./run 2>&1 | grep -v '^ *Date:' >$OUT
    diff -u $VERIFY $OUT >$DIFF 2>&1
    status=$?
    if [ $status -ne 0 ]; then
	echo "$DIR: FAILED, see $DIR/$DIFF"
	exit 1
    else
	echo "$DIR: OK"
	exit 0
    fi

fi

exit 0
