#!/bin/sh

../tr.init

G="../../src/gate/rfc2ftn  -L../cf -v -i -cconfig.gate"
T="../../src/toss/ftntoss  -L../cf -v -cconfig.main"
R="../../src/toss/ftnroute -L../cf -v -cconfig.main"
P="../../src/toss/ftnpack  -L../cf -v -cconfig.main"

# create messages

$G -n <<EOF
Newsgroups: test
Subject: Test Gateway 2:2499/99
From: Test User <test@fido.de>
X-Comment-To: Whole Universe
Message-ID: <test123@fido.de>

Test \
Test - Gateway 2:2499/99
Test /

MfG ... The Test User ;-)
EOF

# toss messages
$T -I./out -b./areas.bbs
$R 
#$P
